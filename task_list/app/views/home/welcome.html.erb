<h1> Bem-vindo ao Task List! </h1>
<h3> Sua lista de tarefas: </h3>
<!-- imprimir somente a descricao, nao a iteracao(each) -->
<% @tasks.each do |task| %>
    <%= task.description %>
    <!-- caminho para editar cada task -->
    <%= link_to 'Editar', edit_task_path(task) %>
    <%= link_to 'Apagar', task_path(task), method: :delete, data: { confirm: 'Quer apagar essa tarefa?' } %>

<% end %>